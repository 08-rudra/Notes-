<div class="container-fluid container-fluid-custom pb-5 mb-5">
  <div class="row mb-4">
    <div class="col">
      <nav area-lable="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrum-item">
            <a href="/dashboard">Dashboard</a>
          </li>
          <li class="breadcrum-item">Add Note</li>
        </ol>
      </nav>

      <div class="col d-flex justify-content-between align-items-center">
        <h3 class="hm">Add Note</h3>
      </div>
    </div>
  </div>

  <form action="/dashboard/add" method="POST" class="position-relative">
    <div
      class="form-group mb-4 position-absolute"
      style="left: -1px; top: 1px; right: 1px"
    >
      <input
        type="text"
        name="title"
        id="title"
        class="form-control fw-bold border-0 fs-4"
        placeholder="Title"
        required
      />
    </div>

    <div class="form-group mb-4">
      <textarea
        required
        name="body"
        id="body"
        rows="12"
        class="form-control pt-5 fs-4"
        placeholder="Take a note....."
      ></textarea>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-lg">+ Add Note</button>
    </div>
  </form>
</div>
